[filetype]

rules = [
	# Images
	{ mime = "image/*", fg = "#AED1D5" },

	# Media
	{ mime = "{audio,video}/*", fg = "#C9DCE2" },

	# Archives
	{ mime = "application/*zip", fg = "#9AA0A2" },
	{ mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#9AA0A2" },

	# Documents
	{ mime = "application/{pdf,doc,rtf,vnd.*}", fg = "#AED1D5" },

	# Fallback
	{ name = "*", fg = "#91CEE0" },
	{ name = "*/", fg = "#C8C3A9" }
]

