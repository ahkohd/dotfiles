[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion",
      "ctrl-j": ["workspace::SendKeystrokes", "down"],
      "ctrl-k": ["workspace::SendKeystrokes", "up"],
      "ctrl-a": "editor::ShowCompletions"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space f": "file_finder::Toggle",
      "space space": "project_panel::ToggleFocus",
      "space r": "workspace::NewSearch",
      "space k": "editor::ToggleCodeActions",
      "space h": "workspace::ToggleLeftDock",
      "space a": ["workspace::SendKeystrokes", ": w enter"],
      "space i": "outline::Toggle",
      "space o": "project_symbols::Toggle",
      "space e": "diagnostics::Deploy",
      "space j": "tab_switcher::Toggle",
      "space tab": "workspace::ToggleZoom",
      "space enter": ["workspace::SendKeystrokes", ": n o h enter"],
      "space g o": "editor::OpenPermalinkToLine",
      "space g c": "editor::CopyPermalinkToLine",
      "g R": "editor::Rename",
      "n": ["workspace::SendKeystrokes", "n z z"],
      "shift-n": ["workspace::SendKeystrokes", "shift-n z z"],
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-d z z"],
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-u z z"],
      "left": "workspace::ActivatePaneLeft",
      "down": "workspace::ActivatePaneDown",
      "up": "workspace::ActivatePaneUp",
      "right": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "; j": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "; j": "terminal_panel::Toggle",
      "space escape": "pane::CloseActiveItem",
      "alt-f": ["workspace::SendKeystrokes", "cmd-0 cmd-= cmd-= cmd-="],
      "alt-g": "zed::ResetBufferFontSize",
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "space escape": "workspace::ActivatePaneLeft"
    }
  }
]
