	{ mime = "image/*", fg = "#D1C9B4" },

	# Media
	{ mime = "{audio,video}/*", fg = "#F6D3BD" },

	# Archives
	{ mime = "application/*zip", fg = "#A99D95" },
	{ mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#A99D95" },

