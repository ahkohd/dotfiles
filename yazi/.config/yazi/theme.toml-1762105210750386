[filetype]

rules = [
	# Images
	{ mime = "image/*", fg = "#FBC6CD" },

	# Media
	{ mime = "{audio,video}/*", fg = "#B9D7FF" },

	# Archives
	{ mime = "application/*zip", fg = "#949FAD" },
	{ mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#949FAD" },

	# Documents
