[filetype]

rules = [
	# Images
	{ mime = "image/*", fg = "#ADADAD" },

	# Media
	{ mime = "{audio,video}/*", fg = "#D9D9D9" },

	# Archives
	{ mime = "application/*zip", fg = "#9F9F9F" },
	{ mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#9F9F9F" },

	# Documents
	{ mime = "application/{pdf,doc,rtf,vnd.*}", fg = "#ADADAD" },

	# Fallback
	{ name = "*", fg = "#8F8F8F" },
	{ name = "*/", fg = "#F74C00" }
]

