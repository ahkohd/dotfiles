[filetype]

rules = [
	# Images
	{ mime = "image/*", fg = "#1D8C9B" },

	# Media
	{ mime = "{audio,video}/*", fg = "#E7BD93" },

	# Archives
	{ mime = "application/*zip", fg = "#A49587" },
	{ mime = "application/x-{tar,bzip*,7z-compressed,xz,rar}", fg = "#A49587" },

	# Documents
